{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true
  },
  "rules": {
    "curly": [2, "multi-line"],
    "eqeqeq": 2,
    "no-var": 2,
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "comma-dangle": [2, "always-multiline"],
    "space-before-blocks": [2, "always"]
  }
}
